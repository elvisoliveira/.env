[VGA]
command=$HOME/.local/bin/ddcutil 2
interval=once
label=VGA 

[HDMI]
command=$HOME/.local/bin/ddcutil 1
interval=once
label=HDMI 

[temperature]
label=TEMP 
command=$HOME/.local/bin/temperature
interval=10

[memory]
label=MEM 
command=$HOME/.local/bin/memory
interval=30

[cpu]
label=CPU 
command=$HOME/.local/bin/cpu_usage
interval=30

[iface]
command=$HOME/.local/bin/iface
interval=30

[disk]
command=$HOME/.local/bin/disk
label=HOME 
interval=30

[disk]
