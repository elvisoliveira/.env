# global
# dependency: nerd-fonts-mononoki
full_text=|
align=center
color=#CCCCCC
markup=pango
separator=true
separator_block_width=20

[music]
command=$HOME/.local/bin/cmusic
interval=5

[volume]
label=VOL 
# dependency: alsa-utils
command=$HOME/.local/bin/volume
interval=once
signal=10

[temperature]
label=TEMP 
command=$HOME/.local/bin/temperature
interval=10

[memory]
label=MEM 
command=$HOME/.local/bin/memory
interval=30

[battery]
command=$script_dir/battery
interval=30
label=BAT 
bat_number=1

[iface]
command=$HOME/.local/bin/iface
interval=30

[disk]
command=$HOME/.local/bin/disk
label=HOME 
interval=30

[disk]
command=$HOME/.local/bin/disk
label=SLASH 
interval=30
DIR=/

[time]
command=date '+%d/%m/%y %H:%M:%S'
interval=5
