# global
full_text=|
align=center
color=#CCCCCC
markup=pango
separator=true
separator_block_width=20
script_dir=~/.local/bin

[music]
command=$script_dir/cmus
interval=5

[volume]
label=VOL 
command=$script_dir/volume
interval=once
signal=10

[temperature]
label=TEMP 
command=$script_dir/temperature
interval=10

[memory]
label=MEM 
command=$script_dir/memory
interval=30

[battery]
command=$script_dir/battery
interval=30
label=BAT 
bat_number=1

[iface]
command=$script_dir/iface
interval=30

[disk]
command=$script_dir/disk
label=DISK 
dir=/
interval=30

[time]
command=date '+%d/%m/%y %H:%M:%S'
interval=5